@model Clinical_Trial_Task_Manager.Domain.Entities.TaskItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TaskItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-2">
            Patient
        </dt>
        <dd class="col-sm-10">
            @(Model.Patient == null ? "-" : $"{Model.Patient.Code} - {Model.Patient.FullName}")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

        <input type="submit" value="Delete" class="btn btn-danger" />

        @if (ViewData["ReturnUrl"] != null)
        {
            <a class="btn btn-outline-secondary ms-2" href="@ViewData["ReturnUrl"]">Back</a>
        }
        else
        {
            <a class="btn btn-outline-secondary ms-2" asp-action="Index">Back</a>
        }
    </form>
</div>
